{
  "name": "robocode",
  "displayName": "RoboCode",
  "description": "VS Code extension focused on KUKA KRL (.src/.dat) programming",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "krl",
        "aliases": ["KUKA Robot Language", "krl"],
        "extensions": [".src", ".dat"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "krl",
        "scopeName": "source.krl",
        "path": "./syntaxes/krl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "robocode.connectRobot",
        "title": "Connect to Robot",
        "category": "RoboCode"
      },
      {
        "command": "robocode.disconnectRobot",
        "title": "Disconnect Robot",
        "category": "RoboCode"
      },
      {
        "command": "robocode.showRobotStatus",
        "title": "Show Robot Status",
        "category": "RoboCode"
      },
      {
        "command": "robocode.uploadProgram",
        "title": "Upload Program to Robot",
        "category": "RoboCode"
      },
      {
        "command": "robocode.wrapFoldRegion",
        "title": "Wrap Selection in FOLD Region",
        "category": "RoboCode"
      },
      {
            "command": "robocode.insertFoldTemplate",
            "title": "Insert FOLD Template"
        },
        {
            "command": "robocode.goToMatchingFold",
            "title": "Go to Matching FOLD/ENDFOLD"
        },
        {
            "command": "robocode.toggleFoldOnLine",
            "title": "Toggle Fold on Current Line"
        }
    ],
    "views": {
      "explorer": [
        {
          "id": "robotExplorer",
          "name": "Robot Connections",
          "when": "true",
          "icon": "$(plug)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "robotActivity",
          "title": "Robot Management",
          "icon": "$(robot)"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .src || resourceExtname == .dat",
          "command": "robocode.uploadProgram",
          "group": "robot"
        }
      ]
    },
    "keybindings": [
      {
        "command": "robocode.goToMatchingFold",
        "key": "ctrl+shift+]",
        "when": "editorTextFocus && editorLangId == krl"
      },
      {
        "command": "robocode.toggleFoldOnLine",
        "key": "ctrl+shift+f",
        "when": "editorTextFocus && editorLangId == krl"
      }
    ],
    "snippets": [
      {
        "language": "krl",
        "path": "./snippets/krl.code-snippets"
      }
    ],
    "configuration": {
      "title": "RoboCode KRL",
      "properties": {
        "robocode.format.alignAssignments": {
          "type": "boolean",
            "default": true,
            "description": "Align '=' signs in simple assignment statements."
        },
        "robocode.format.uppercaseKeywords": {
          "type": "boolean",
          "default": true,
          "description": "Uppercase KRL keywords and motion/motion-related commands (DEF, END, PTP, LIN, IF, FOR, etc.)."
        }
      }
    },
    "debuggers": []
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "vscode-debugadapter": "^1.63.0",
    "vscode-debugprotocol": "^1.63.0"
  }
}
