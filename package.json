{
  "name": "robocode",
  "displayName": "RoboCode",
  "description": "VS Code extension for managing and coding industrial robots like KUKA, FANUC, ABB, Dobot and others",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "krl",
        "aliases": ["KUKA Robot Language", "krl"],
        "extensions": [".src", ".dat"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "rapid",
        "aliases": ["ABB RAPID", "rapid"],
        "extensions": [".mod", ".sys"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "as",
        "aliases": ["FANUC AS", "as"],
        "extensions": [".ls", ".tp"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "krl",
        "scopeName": "source.krl",
        "path": "./syntaxes/krl.tmLanguage.json"
      },
      {
        "language": "rapid",
        "scopeName": "source.rapid",
        "path": "./syntaxes/rapid.tmLanguage.json"
      },
      {
        "language": "as",
        "scopeName": "source.as",
        "path": "./syntaxes/as.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "robocode.connectRobot",
        "title": "Connect to Robot",
        "category": "RoboCode"
      },
      {
        "command": "robocode.disconnectRobot",
        "title": "Disconnect Robot",
        "category": "RoboCode"
      },
      {
        "command": "robocode.showRobotStatus",
        "title": "Show Robot Status",
        "category": "RoboCode"
      },
      {
        "command": "robocode.uploadProgram",
        "title": "Upload Program to Robot",
        "category": "RoboCode"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "robotExplorer",
          "name": "Robot Connections",
          "when": "true",
          "icon": "$(plug)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "robotActivity",
          "title": "Robot Management",
          "icon": "$(robot)"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .src || resourceExtname == .dat || resourceExtname == .mod || resourceExtname == .sys || resourceExtname == .ls || resourceExtname == .tp",
          "command": "robocode.uploadProgram",
          "group": "robot"
        }
      ]
    },
    "debuggers": [
      {
        "type": "robocode",
        "label": "RoboCode Robot Program",
        "languages": ["krl", "rapid", "as"],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the robot program file (.src/.dat/.mod/.ls)",
                "default": "${file}"
              },
              "robotType": {
                "type": "string",
                "description": "Robot controller type",
                "enum": ["KUKA", "ABB", "FANUC", "DOBOT"],
                "default": "KUKA"
              },
              "ipAddress": {
                "type": "string",
                "description": "Target robot IP (simulation if 127.0.0.1)",
                "default": "127.0.0.1"
              },
              "cycleDelayMs": {
                "type": "number",
                "description": "Delay in ms between executing lines",
                "default": 150
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "robocode",
            "request": "launch",
            "name": "Run Robot Program (Simulated)",
            "program": "${file}",
            "robotType": "KUKA",
            "ipAddress": "127.0.0.1",
            "cycleDelayMs": 150
          }
        ],
        "configurationSnippets": [
          {
            "label": "RoboCode: Simulate current robot file",
            "description": "Run the currently open robot program in the RoboCode simulator",
            "body": {
              "type": "robocode",
              "request": "launch",
              "name": "RoboCode Simulate ${fileBasename}",
              "program": "${file}",
              "robotType": "KUKA",
              "ipAddress": "127.0.0.1",
              "cycleDelayMs": 100
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "vscode-debugadapter": "^1.63.0",
    "vscode-debugprotocol": "^1.63.0"
  }
}
